<UserControl x:Class="Metrosun.UserControls.WeatherItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="70">
    
    <Grid x:Name="LayoutRoot">
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding WeatherTemp}" FontSize="50" />
                <TextBlock Text="°C" FontSize="40" Margin="0,3,0,0" />
            </StackPanel>
            <StackPanel VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="{Binding WeatherDate}" FontSize="25" />
                <TextBlock Text="{Binding WeatherDesc}" FontSize="25" FontWeight="SemiBold" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>